<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
  <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <nav>
      <%- include('../partials/nav.ejs')%>
    </nav>
    <div class="container-fluid">
      <h2>Upgrade Guitar</h2>
        <div>
          <form style="width: 500px; margin: auto;" action="/guitars/<%=guitar.id%>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="name">Name: </label>
              <input type="text" name="name" value="<%=guitar.name%>"class="form-control" id="name"/>
            </div>
            <div class="form-group">
              <label for="img">Image: </label>
              <input type="text" name="img" value="<%=guitar.img%>" id="img"class="form-control" id="img"/>
            </div>
            <div class="form-group">
              <label for="description">Description: </label>
              <input type="text" name="description" value="<%=guitar.description%>"class="form-control" id="description"/>
            </div>
            <div class="form-group">
              <label for="price">Price: </label>
              <input type="number" name="price" value="<%=guitar.price || 0 %>" min="0" step=".01"class="form-control" id="price">
            </div>
            <div class="form-group">
              <label for="qty">Quantity: </label>
              <input type="number" name="qty" value="<%=guitar.qty || 0 %>" min="0"class="form-control" id="qty"/>
            </div>
            <div class="row">
              <div class="col">
                <input class="btn btn-primary"type="submit" value="Upgrade Guitar">
              </div>
              </form>
              <div class="col">
                <form action="/guitars/<%=guitar.id;%>?_method=DELETE" method="POST">
              <input class="btn btn-danger"type="submit" value="DELETE"/>
              </form>
              </div>
          </div>
    </div><br>
  </body>
  <footer>
    <%- include('../partials/footer.ejs')%>
  </footer>
</html>
